<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/addWordBack"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/back_before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />

    <EditText
        android:id="@+id/addWordContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:inputType="text"
        android:text="Content" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="157dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/easyLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickLevel"
            android:text="Easy" />

        <RadioButton
            android:id="@+id/mediumLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickLevel"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/hardLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickLevel"
            android:text="Hard" />
    </RadioGroup>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/topicSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickTopic"
            android:text="School" />

        <RadioButton
            android:id="@+id/topicZoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickTopic"
            android:text="Zoo" />

        <RadioButton
            android:id="@+id/topicHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="pickTopic"
            android:text="Home" />
    </RadioGroup>

    <EditText
        android:id="@+id/addWordHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="249dp"
        android:inputType="text"
        android:text="Hint" />

    <EditText
        android:id="@+id/addWordExplanation"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="190dp"
        android:inputType="text"
        android:text="Explanation" />

    <EditText
        android:id="@+id/addWordSampleSen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="132dp"
        android:inputType="text"
        android:text="Sample Sentence" />


    <Button
        android:id="@+id/addWordAdd"
        android:layout_width="98dp"
        android:layout_height="97dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="@drawable/add_word_before"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.563" />



</RelativeLayout>